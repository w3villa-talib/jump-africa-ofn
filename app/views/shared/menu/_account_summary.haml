:css
  #account_summary {
    width: 100%;
    height: 30px;
    background-color: #4d4d4d;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 1000;
    //font-family: Menlo, Monaco, Consolas, "Courier New", monospace;
    font-size: 13px;
  }


  #account_summary  a, a:hover, a:focus, a:active {
      text-decoration: none;
  }

  .navbar-brand{
    font-size: 13px;
    color: gainsboro;
  }
  
  #account_summary .left_column .current_market{
     display: flex;
     align-items: center;
  }  

  .navbar-text{
    margin-left: 15px;
    font-size: 13px;
    margin-bottom: 0;
    color: #a3a3a3;
    
    span.vol,
    span.high,
    span.low,
    span.change {
