    }
  }
  .navbar-text span:nth-child(2n){
    margin-right: 6px;
  }
  .back{
    margin-left: 10px;
    color: #38a6cb;
  }

  .load_more{
      text-align: center;
      cursor: pointer;
  }
  .hide_others{
    text-align: center;
    cursor: pointer;
    display: none;
  }

  .muted-text{
     color: gainsboro;
  }

  #account_summary .right_column{
    padding-right: 5px;
    display: flex;
    align-items: center;
    gap: 10px;
  }  
  
  .need-help  {
