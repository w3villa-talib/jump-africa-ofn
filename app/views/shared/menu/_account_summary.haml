  .dropdown:hover .dropdown-content_summary {display: block;}
  @media only screen and (max-width: 1024px) {
    #account_summary {
      display: none;
    }
  }

:javascript
  $(document).ready(function () {
    size_li = $(".block").size();
    x=2;
    var flag = true;
    $('.block:lt('+x+')').show();
     $('.load_more').click(function () {
        if (flag) {
          $('.block:lt('+size_li+')').show();
          $('.block:lt('+x+')').show();
          flag = false;
          $('.hide_others').show();
          $('.load_more').hide();
        } else {
          $('.block:lt('+size_li+')').hide();
          $('.block:lt('+x+')').show();
          flag = true;
        }
        
    });
     $('.hide_others').click(function () {
        if (flag) {
          $('.block:lt('+size_li+')').show();
          $('.block:lt('+x+')').show();
          flag = false;
        } else {
          $('.block:lt('+size_li+')').hide();
          $('.block:lt('+x+')').show();
           $('.load_more').show();
            $('.hide_others').hide();
          flag = true;
        }
        
    });
   
  });

